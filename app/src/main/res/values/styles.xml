<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- List Items -->
    <style name="BigTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="ItemsBooked">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="ItemsEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="SmallLabel">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <!-- Buttons -->
    <style name="ActionButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Car Item -->
    <style name="CarItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="CarItemValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>


</resources>
